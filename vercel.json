{
  "builds": [
    {
      "src": "app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "30mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "app/wsgi.py"
    },
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    }
  ]
}
